/* pages/comment/comment.wxss */
.container{
    width: 100%;
}
.container .comment-hd, .comment-bd{
    width: 100%;
    
    /*padding: 0 20rpx;*/
    
    
}
.container .comment-hd .selectedComment,.ordinaryComment{
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 20rpx;
    color: #889091;
    background: #F6F6F6;
}
.container .user-comment{
    width: 100%;
    /*padding: 20rpx 20rpx 10rpx 20px;*/
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}
.container .user-avatar{
    width: 100rpx;
    height: 200rpx;
    /*border-radius: 50%;*/
    /*background: red;*/
}
.container .user-avatar image{
    display: inline-block;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    /*background: yellow;*/
    
}
.container .comment-content{
    padding: 0 20rpx;
    padding-right: 30rpx;
    border-bottom: 1px solid #bebebe;
}
.comment-content .user-name text{
    font-weight: 500;
}
.comment-content .answer-content{
    color: #6E6E6E;
    font-size: 30rpx;
}
.container .comment-action{
    padding: 10rpx 0  0;
    color: #a0acac;
}
.container .comment-action view{
    display: inline-block;
    vertical-align: text-bottom;
    padding: 0 10rpx 0 0;
    font-size: 28rpx;
}
.container .comment-action .dot :after{
  /*content: "â€¢";*/
}
.container .comment-ft{
    width: 100%;
    position: fixed;
    bottom: 0;
    height: 90rpx;
    border-top: 1px solid #bebebe;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    /*background-color: rebeccapurple;*/
}
.comment-ft .commentInput{
    width: 80%;
    height: 70rpx;
    margin-left: 20rpx;
    border-radius: 8rpx;
    padding-left: 20rpx;
    background: #F6F6F6;
}
.comment-ft .commentInput .placeholderClass{
    line-height: 70rpx;
    font-size: 32rpx;
}
.comment-ft .commentBtn{
    margin-right: 20rpx;
    font-size: 32rpx;
}