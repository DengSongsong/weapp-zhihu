.container{
    width: 100%;
    height: 100vh;
    /*border-left: 1px solid white;*/
    /*border-right: 10px solid white;*/
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    align-items: center;

}
.container .weui-cells{
    margin-top: 0;
    border-top: 30rpx solid #F6F6F6;
}
/*.container .weui-cells.personalInfo{
    border-top: 30rpx solid #CDCDCD;
}*/
.container .personalInfo .weui-cell__hd image{
    display: inline-block;
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.container .personalInfo .personalInfo-content{
    margin-left: 20rpx;
}
.container .personalInfo-name{
    font-size: 36rpx;
}
.container .personalInfo-edit{
    font-size: 30rpx;
    color: #CDCDCD;
}
.weui-cell__ft:after{
    content: " ";
    display: inline-block;
    height: 10px;
    width: 10px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px;
    margin-right: 25rpx;
}
.container .info-list{
    width: 100%;
    height: 100rpx;
    padding-left: 20rpx;
    line-height: 100rpx;
    font-weight: 500;
    border-top: 30rpx solid #F6F6F6;
    border-bottom: 2rpx solid #F6F6F6;
    background: white;
}
.container .info-ft{
    /*position: absolute;*/
    /*z-index: 1000;*/
    height: 40vh;
    display: flex;
    flex-direction: column;
    align-items: center;
}
