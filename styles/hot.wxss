.hot-item{
    padding: 30rpx 30rpx 30rpx 30rpx;
    border-top: 20rpx solid #EBEBEB;
    /*background: blue;*/
}
.hot-item .hot-hd{
    width: 100%;
    /*padding-top: 5rpx;*/
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    /*background-color: red;*/
}
.hot-item .hot-hd .userInfo-avatar{
    display: inline-block;
    width: 45rpx;
    height: 45rpx;
    border-radius: 45rpx;
    /*margin-top: 20rpx;*/
    /*background-color: yellow;*/
}
.hot-item .hot-hd .userInfo-avatar image{
    display: inline-block;
    width: 45rpx;
    height: 45rpx;
    border-radius: 45rpx;
    /*top: 10rpx;*/
    vertical-align: middle;
}
.hot-item .hot-hd .userInfo-name{
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    margin:0 0 0 15rpx;
    color: #a0acac;
    font-size: 30rpx;
    /*margin-top: -10rpx;*/
}
.hot-item .hot-bd{
    width: 100%;
    /*height: 100rpx;*/
    padding: 10rpx 0 0 0;
    /*background: rebeccapurple;*/
}
.hot-item .hot-bd text{
    width: 100%;
    font-size: 36rpx;
    /*height: 100rpx;*/
    font-weight: 600;
    line-height: 40rpx;
    letter-spacing: 3rpx;
}
.hot-item .hot-ft{
    width: 100%;
    padding: 10rpx 0 0 0;
    font-size: 32rpx;
    line-height: 38rpx;
    color: #5b5b5b;
    /*background-color: brown;*/
}